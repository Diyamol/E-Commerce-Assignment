@model IEnumerable<CSharpAssignment2.Models.Cart>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Cart</h1>

<div>
    <table class="sign-tbl">

        @foreach (var item in Model)
        {
            <tr>
                <td class="td-prod-det-img">
                    <a href="@Url.Action("Products", "Product")">
                        <img src="~/images/ProductDet/thumb_asus_1.jpg" />
                    </a>
                </td>
                <td>
                    <span>
                        <input type="hidden" asp-for="@item.productId" />
                        <b>@item.productName</b><br />
                        Price: $@item.price<br />


                    </span>

                </td>
            </tr>
        }

    </table>
    <input type="button" value="Proceed to Checkout" class="btn-sub" onclick="location.href = '@Url.Action("Checkout","User")'" />
</div>

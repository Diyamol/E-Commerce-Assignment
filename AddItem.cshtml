@model CSharpAssignment2.Models.Products
@{
    ViewData["Title"] = "AddItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddItem</h1>

<div>
    <br />
    <form asp-action="AddItem" method="post" asp-controller="Admin" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="sign-tbl">
            <tr class="form-group">
                <td>
                    <label class="control-label">Product Name</label>

                </td>
                <td>
                    <input asp-for="productName" class="form-control" />
                    <span asp-validation-for="productName" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label class="control-label">Product Description</label>

                </td>
                <td>
                    <input asp-for="productDescription" class="form-control" />
                    <span asp-validation-for="productDescription" class="text-danger"></span>
                </td>
            </tr>
            @*<tr class="form-group">
                <td>
                    <label class="control-label" asp-for="productImge"></label>
                </td>
                <td class="custom-file">
                    <input asp-for="productImge" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label" for="customFile">Choose file</label>
                    <span asp-validation-for="productImge" class="text-danger"></span>

                </td>
            </tr>*@
            <tr class="form-group">
                <td>
                    <label class="control-label">Quantity</label>
                </td>
                <td>
                    <input asp-for="quantity" class="form-control" />
                    <span asp-validation-for="quantity" class="text-danger"></span>
                </td>
            </tr>
            <tr class="form-group">
                <td>
                    <label class="control-label">Price</label>
                </td>
                <td>
                    <input asp-for="price" class="form-control" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </td>
            </tr>

            <tr class="form-group">
                <td>
                    <input type="reset" class="btn-reset btn-sub" value="Clear" />
                </td>
                <td>
                    <input type="submit" class="btn-sub" value="Add" />
                </td>
            </tr>
        </table>
    </form>

</div>
@section scripts{
    <script type="text/javascript">

      @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    </script>
}